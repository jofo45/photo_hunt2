<% if @item.errors.any? %>
  <h2>There were errors saving your item</h2>
  <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @item do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :classification %>
    <%= f.text_field :classification %>
  </div>
  <%= f.submit %>
<% end %>